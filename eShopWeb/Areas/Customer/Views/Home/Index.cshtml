@model eShop.Models.ViewModels.HomeVM
@{
    ViewData["Title"] = "Home Page";
}
  

<section class="esh-catalog-hero">
    
</section>
<section class="esh-catalog-filters">
    <div class="container">
        
        <form method="get">            
             <label class="esh-catalog-label" data-title="search t-shirt">
                <input class="esh-catalog-filter" asp-for="FilterName" asp-class="esh-catalog-filter" >
            </label>           
            <button class="esh-catalog-send" type="submit" asp-controller="Home" asp-action="Index">Search</button>
        </form>
   
    </div>
</section>

<div class="row pb-3">
    @foreach(var product in Model.Tshirt)
    {
    <div class="col-lg-3 col-md-6">
        <div class="row m-2">
            <div class="col-12 p-1" style="border:1px solid #008cba; border-radius: 5px;">
            <div class="card">
                <img src='@product.ImageUrl' width="300" height="300" class="card-img-top rounded"/>
                <div class="card-body">
                <div class="pl-1">
                    <p class="card-title h5 text-primary">@product.Name</p>
                    <p class="card-title text-secondary">@product.Description</p>
                </div>
                <div class="pl-1">
                    <p>List Price: <b><strike>$@product.ListPrice.ToString("0.00")</strike></b></p>
                    </div>
                     <div class="pl-1">
                    <p>As low as: <b>$@product.Price50.ToString("0.00")</b></p>
                    </div>
                    </div>
            </div>
            <a asp-action="Details" class="btn btn-primary form-control" asp-route-productId="@product.Id">Details</a>
            </div>
            
        </div>
        </div>
  }
</div>
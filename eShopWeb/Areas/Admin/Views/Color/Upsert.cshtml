@model Color
@{
    ViewData["Title"] = "Create";
}
<form method="post" asp-action="Upsert" enctype="multipart/form-data">
   <input asp-for="Id" hidden/>
<div class="row">
        <div class="col-10">
<div class="border p-3 mt-4 row">    
            <h2 class="text-priamry">@(Model.Id!=0?"Update":"Create") Size</h2>

        
<div class="mb-3">    
  <label asp-for="Type" ></label>
  <input asp-for="Type" class="form-control">
  <span asp-validation-for="Type" class="text-danger"></span>
</div>
<div class="mb-3">    
  <label asp-for="ColorInRGB"></label>
  <input asp-for="ColorInRGB" type="color" class="form-control">
  <span asp-validation-for="ColorInRGB" class="text-danger"></span>
</div>

    @if(Model.Id!=0){
                <button type="submit" class="mt-5 btn btn-primary" style="width:150px;">Update</button>
            }else
            {
                <button type="submit" class="mt-5 btn btn-primary" style="width:150px;">Create</button>
            }
            <a asp-controller="Cover" asp-action="Index" class="mt-5 btn btn-dark btn-primary " style="width:150px;">Back to list</a>
        </div>
        

    </div>
    </div>

</form>
@section Scripts{
@{
    <partial name="_ValidationScriptsPartial" />
    }
}